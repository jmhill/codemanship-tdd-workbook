{
  "tasks": {
    "test": "deno test",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "lint": {
    "include": ["src/", "tests/"],
    "exclude": ["node_modules/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/"],
    "exclude": ["node_modules/"],
    "indentWidth": 2,
    "lineWidth": 80,
    "singleQuote": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13"
  }
}